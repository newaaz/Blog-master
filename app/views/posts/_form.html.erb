<%= form_with(model: @post, class: 'vstack gap-4') do |f| %>
  <div id="forms_errors">
    <%= render 'shared/errors', object: f.object %>
  </div>

  <div class="card shadow">
    <div class="card-body">
      <div class="row g-3">
        <div class="col-md-12">
          <%= f.label :title, class: 'form-label' %>*
          <%= f.text_field :title, class: 'form-control' %>
        </div>

        <div class="col-12">
          <%= f.label :body, class: 'form-label' %> *
          <%= f.text_area :body, rows: 6, class: 'form-control' %>
        </div>
      </div>
    </div>
  </div>


  <div class="row g-3">
    <div class="col-md-8">
      <div class="form-group">
        <%= f.label :files, class: 'form-label' %>*
        <%= f.file_field :files, multiple: true, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="text-center">
    <%= f.submit "Добавить пост", class:"btn btn-primary my-4" %>
  </div>
<% end %>