<header class="mb-4 shadow py-1">
  <nav class="navbar">
    <div class="container">
      <%= link_to root_url, class: "navbar-brand fw-semibold text-primary" do %>
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 18">
          <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
          <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z"/>
        </svg>

        <span class="text-dark">ПостМастер</span>
      <% end %>

      <div class="text-end">
        <% if user_signed_in? %>
          <div class="btn-group">
            <button type="button" class="btn btn-primary btn-sm dropdown-toggle" data-bs-toggle="dropdown" data-bs-display="static" aria-expanded="false">
              <%= current_user.login %>
            </button>
            <ul class="dropdown-menu dropdown-menu-end dropdown-menu-lg-start">
              <li>
                <%= link_to user_path(current_user), class: 'dropdown-item' do %>
                  <i class="bi bi-person-workspace me-2"></i> Профиль
                <% end %>
              </li>
              <li>
                <%= link_to new_post_path, class: 'dropdown-item' do %>
                  <i class="bi bi-pen me-2"></i> Новый пост
                <% end %>
              </li>
              <li>
                <%= link_to destroy_user_session_path, data: { "turbo-method": :delete }, class: 'dropdown-item' do %>
                  <i class="bi bi-box-arrow-right me-2"></i> Выход
                <% end %>
              </li>
            </ul>
          </div>

          <% if current_user.admin? %>
            <div class="dropdown d-inline">
              <button class="btn btn-outline-primary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                Admin
              </button>
              <ul class="dropdown-menu">
                <li>
                  <%= link_to user_path(current_user), class: 'dropdown-item' do %>
                    <i class="bi bi-person-workspace me-2"></i>Vacations
                  <% end %>
                </li>
                <li>
                  <%= link_to destroy_user_session_path, data: { "turbo-method": :delete }, class: 'dropdown-item bg-danger-soft-hover' do %>
                    <i class="bi bi-box-arrow-right me-2"></i>Sign Out
                  <% end %>
                </li>
              </ul>
            </div>
          <% end %>
        <% else %>
          <%= link_to "Log in", new_user_session_path, class: 'btn btn-primary btn-sm me-1' %>
          <%= link_to "Sign up", new_user_registration_path, class: 'btn btn-outline-primary btn-sm' %>
        <% end %>
      </div>
    </div>
  </nav>
</header>